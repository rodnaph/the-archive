use strict;

use constant LOG_FILE => BASE . 'files/msgboard_log.txt';

use FileHandle qw( print );

###############################################################################################

require 'output.lib';

###############################################################################################
##
##  msgboard_header( title )
##
###############################################################################################

sub msgboard_header {

  my ( $title ) = @_;

  header( $title, '','', 'Msgboard' );
  top_menu( {
              ITEMS => [
                         ['msgboard/nocache.pl','main'],
                         ['msgboard/communal.pl','communal'],
                         ['msgboard/login.pl','login'],
                         ['msgboard/nocache.pl?post=latest','latest'],
                         ['msgboard/help.pl','help']
                       ],
              ALIGN => 'right'
            }
          );
  open_tr();

  ##
  ##  loging...
  ##

  my $date = gmtime( time() );
  my $fh = new FileHandle( LOG_FILE, '>' );

  $fh->print( $date );
  $fh->close();

}

###############################################################################################
##
##  edit_colors( html )
##
###############################################################################################

sub edit_colors {

  my ( $html ) = @_;

  $html =~ s/color="000000"/color="ffffff"/g;

  return $html;

}

###############################################################################################

1;

