use strict;

use constant LOG_DIR => BASE . 'files/logs/';

use FileHandle qw( print );

###############################################################################################
##
##  log( name [, content] )
##
###############################################################################################

sub do_log {

  my $name = shift;

  my $date = gmtime( time() );
  my $fh = new FileHandle( LOG_DIR . $name . '.log', '>>' );
  my $content = undef();

  while( my $arg = shift ) {
    $content .= ($content) ? ":#:$arg" : $arg;
  }

  $fh->print( "$date:#:$content\n" );
  $fh->close();

}

###############################################################################################

1;

