use strict;
use FileHandle;

#############################################################
#############################################################

#############################################################
##
##  get_pages(page_file) : rh_pages
##
#############################################################

sub get_pages {

  my ($page_file) = @_;

  my ($rh_pages);

  my $fh = new FileHandle($page_file);
  my $i = 1;
  while (my $page = <$fh>) {
    chomp($page);
    $rh_pages->{$page} = $i++;
  }

  return $rh_pages;

}

###################################################
##
##  get_page_file(page) : file
##
###################################################

sub get_page_file {

  my ($page) = @_;

  return PAGE_DIR . URLEncode($page) . ".txt";

}

